{% extends app.request.xmlHttpRequest ? 'AcmeDemoBundle:Issue:layout_ajax.html.twig' : 'AcmeDemoBundle::layout.html.twig' %}

{% form_theme form _self %}

{% block content %}
    <form action="{{ path('_demo_contact') }}" method="POST" id="contact_form">
        {{ form_errors(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        {{ form_rest(form) }}
        <input type="submit" value="Send" class="symfony-button-grey" />
    </form>
{% endblock %}
